@model EMMC.Models.Cliente

<html>

<head>
    <title>Login</title>

</head>
<body>

    <section id="Login">
        <div class="row">
            <!--ESPAÇAMENTO ESQUERDA-->
            <div class="col s12 m12 l8">
                <br />
            </div>

            <!--FORMULARIO DE LOGIN-->
            <div class="col s12 m12 l4">
                <a href="@Url.Action("Index", "Home")"><h1>EMMC</h1></a>
                <h5>Login - Cliente</h5>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-red" })

                    <label>CPF</label>
                    @Html.EditorFor(model => model.ClienteCpf)

                    <label>Senha</label>
                    @Html.PasswordFor(model => model.ClienteSenha)

                    <input type="submit" name="btnLogin" placeholder="Login" class="btn-primary"/>
                }
                    @Html.ActionLink("Cadastrar", "Cadastro", "Cliente", null,  new { @class = "btn btn-primary" })

                
            </div>
        </div>
    </section>
</body>
</html>
