@model IEnumerable<EMMC.Models.Cliente>

@{
    ViewBag.Title = "Index Cliente";
}

<h2>Index do Cliente</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClienteNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClienteEndereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClienteSenha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClienteNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClienteEndereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClienteSenha)
        </td>
        <td>
            @Html.ActionLink("Editar Cliente", "Edit", new { id=item.ClienteCpf }) |
            @Html.ActionLink("Detalhes do Cliente", "Details", new { id=item.ClienteCpf }) |
            @Html.ActionLink("Inativar Cliente", "Delete", new { id=item.ClienteCpf })
        </td>
    </tr>
}

</table>
