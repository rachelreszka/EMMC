@model EMMC.Models.Produto

@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/TemplateCliente.cshtml";
}

<h2 style="text-align:center;">Deletar Produto</h2>

<h3>Você tem certeza disso?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdutoDescricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoDescricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdutoQuantidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoQuantidade)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Index", "Index", "", new { @class = "btn btn-warning btn-sm" })
        </div>
    }
</div>
