@model IEnumerable<EMMC.Models.Produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TemplateCliente.cshtml";
}

<h2 style="text-align: center;">Produtos</h2>

<p>
    @Html.ActionLink("Cadastrar novo Produto", "Cadastro", "", new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoria.CategoriaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProdutoDescricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProdutoQuantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoria.CategoriaNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProdutoNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProdutoDescricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProdutoQuantidade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ProdutoId }, new { @class = "btn btn-primary btn-sm" }) 
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.ProdutoId }, new { @class = "btn btn-info btn-sm" }) 
            @Html.ActionLink("Deletar", "Deletar", new { id=item.ProdutoId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
